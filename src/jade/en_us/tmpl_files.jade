each item in files
	-var src = item.src, type = /sass|scss/.test(item.type) ? "sass" : item.type, id = item.id, pid = item.pid
	li(data-src=src, data-type=type, data-pid = pid, id = id)
		h3.name #{item.src}
		p.output
			span #{item.output}
			button.changeOutput change
		div.settings
			label.option
				input.notcompile(type="checkbox")
				span not compile
			button.option.compile compile
			span.option output style:
			case type
				when "less"
					select.outputStyle
						option normal
						option(valur="compress") compress
						option(valur="yuicompress") yuicompress
				when "sass"
					label.option
						input.compass(type="checkbox")
						span compass
					select.outputStyle
						option(valur="nested") nested
						option(valur="expanded") expanded
						option(valur="compact") compact
						option(valur="compressed") compressed
				when "coffee"
					select.outputStyle
						option normal
						option(valur="compress") compress